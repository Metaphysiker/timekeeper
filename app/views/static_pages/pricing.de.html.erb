<main class="container main_center">
    <h1><%= @page_title %></h1>
    <p class="lead">
      <%= @page_description %>
    </p>
    <p class="">Bei Fragen stehe ich Ihnen jederzeit zur Verfügung: <%= mail_to "s.raess@me.com", "s.raess@me.com" %></p>

    <div class="row row-cols-1 row-cols-md-3 g-2 mb-3 text-center">
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm h-100">
          <div class="card-header py-3">
            <h4 class="my-0 fw-normal">Free</h4>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title">0 CHF<small class="text-muted fw-light">/year</small></h1>
            <ul class="mt-3">
              <li>Maximal 100 Eintragungen</li>
              <li>
                Ein Konto
              </li>
            </ul>
          </div>
          <div class="card-footer border-0 bg-light mb-3">
            <%= link_to t('get_started'), new_user_registration_path, class:"primary-button" %>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm h-100">
          <div class="card-header py-3">
            <h4 class="my-0 fw-normal">Personal</h4>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title">12 CHF<small class="text-muted fw-light">/year</small></h1>
            <ul class="mt-3">
              <li>
                Unlimitiert viele Eintragungen
              </li>
              <li>
                Mehrere Konten
              </li>
              <li>
                e-Mail-Support
              </li>
            </ul>
          </div>
          <div class="card-footer border-0 bg-light mb-3">
            <%= link_to t('get_started'), new_user_registration_path, class:"primary-button" %>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm h-100">
          <div class="card-header py-3">
            <h4 class="my-0 fw-normal">Company</h4>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title">60 CHF<small class="text-muted fw-light">/year</small></h1>
            <ul class="mt-3">
              <li>
                Unlimitiert viele Eintragungen
              </li>
              <li>Simple Timekeeper für alle Angestellten</li>
              <li>Handliche Gesamt-Übersicht</li>
              <li>
                e-Mail & Telefon-Support
              </li>
            </ul>
          </div>
          <div class="card-footer border-0 bg-light mb-3">
            <%= link_to t('get_started'), new_user_registration_path, class:"primary-button" %>
          </div>
        </div>
      </div>
    </div>
</main>
